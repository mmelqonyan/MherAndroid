<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:paddingRight="@dimen/pudding"
    android:paddingTop="@dimen/puddingBottom"
    android:paddingBottom="@dimen/puddingTop"
    android:paddingLeft="@dimen/puddingLeft">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_margin="@dimen/RecyclerViewMargin"
        android:elevation="@dimen/RecyclerViewElevation">


    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>